<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.native_programmer.guardiannewsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/guardianicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/guardianicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".badConnectionPage$articlesPage"
            android:label="@string/app_name" />
        <activity
            android:name=".ArticlesActivity"
            android:label="@string/title_activity_articles"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>